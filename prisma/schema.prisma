generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int        @id @default(autoincrement())
  institutionalEmail String     @unique
  idNumber           String     @unique
  firstName          String
  middleName         String
  lastName           String
  gender             String
  password           String
  dateOfCreation     DateTime   @default(now())
  Student            Student?
  Teacher            Teacher?
  Counselor          Counselor?
}

model Student {
  studentId     Int      @id @default(autoincrement())
  userId        Int      @unique
  college       String
  program       String
  year          Int
  birthDate     DateTime
  contactNumber String
  address       String
  User          User     @relation(fields: [userId], references: [id])
}

model Teacher {
  teacherId Int    @id @default(autoincrement())
  userId    Int    @unique
  college   String
  User      User   @relation(fields: [userId], references: [id])
}

model Counselor {
  counselorId Int  @id @default(autoincrement())
  userId      Int  @unique
  User        User @relation(fields: [userId], references: [id])
}
